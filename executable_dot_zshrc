#!/usr/bin/zsh
# vi: ft=zsh

if [[ $0 == 'ksh' ]] || [[ $0 == 'sh' ]]; then
  echo "weird"
  source "$HOME/.shrc" && exit
elif [[ $0 == 'bash' ]]; then
  echo "weird"
  source "$HOME/.bashrc" && exit
fi

# }}}1

# Begin .zshrc benchmarks {{{1

# To run zprof, execute
#
#   env ZSH_PROF='' zsh -ic zprof
# (( $+ZSH_PROF )) && zmodload zsh/zprof
DOZOPROF=false
